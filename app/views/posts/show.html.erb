<p id="notice"><%= notice %></p>

<!-- <p><%= @post_comments.inspect %></p> -->

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to @follow_status, toggle_follow_post_path(user_id: @post.user_id), class: @follow_status %>
<%= link_to @like_status, toggle_like_post_path(post_id: @post), class: @like_status %>
<%= link_to "Add Comment", new_comment_path(post_id: @post.id) %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div class="container">

    <% @post_comments.each do |comment| %>
      <div class="comment-box">
        <p><%= comment.user.email %></p>
        <p><%= comment.content %></p>
      </div>
    <% end %>

</div>
